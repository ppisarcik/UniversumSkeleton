<!DOCTYPE html>
<html>
<head>
  {block head}
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="/imgs/fav.ico">
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,500,600" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
    <link href="{$basePath}/admin-module/fonts/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="{$basePath}/admin-module/stylesheet/main.css" rel="stylesheet">
    <title>{ifset title}{include title} | {/ifset}Podlahyavere.sk</title>
  {/block}
</head>

<body>
  <div id="editModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title"><!-- AJAX loaded content --></h4>
        </div>
        <div class="modal-body">
          <!-- AJAX loaded content -->
        </div>
      </div>
    </div>
  </div>
  <div id="wrapper" class="toggled">
    <div id="sidebar-wrapper">
      <ul class="sidebar-nav">
        <li class="sidebar-brand">
          <a href="{plink :Admin:Homepage:default}">
            <div class="user-img-container">
              {if $profileImage}
                <img src="{$usersPath}{$profileImage->name}">
              {else}
                <img src="/admin-module/user-default.png">
              {/if}
            </div>
            <h3>{$username|FirstUpper}</h3>
          </a>
          <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
              <a href="{link Permissions:default}" class="dropdown-item">Edit profile</a>
              <a n:href=":Login:Sign:out" class="dropdown-item">Log out</a>
            </div>
          </div>
        </li>
        <hr>
        <li class="label">Menu</li>
        <li>
          <a href="{link Homepage:default}" n:class="$presenter->isLinkCurrent('Homepage:*') ? current"><i class="fa fa-area-chart fa-fw" aria-hidden="true"></i>{_menu.Overview}</a>
        </li>
        <li>
          <a href="{link Category:default}" n:class="$presenter->isLinkCurrent('Category:*') ? current"><i class="fa fa-list-alt fa-fw" aria-hidden="true"></i>{_menu.Categories}</a>
        </li>
        <li>
          <a href="{link Article:default}" n:class="$presenter->isLinkCurrent('Article:*') ? current"><i class="fa fa-newspaper-o fa-fw" aria-hidden="true"></i>{_menu.Articles}</a>
        </li>
        <li>
          <a href="{link Contact:default}" n:class="$presenter->isLinkCurrent('Contact:*') ? current"><i class="fa fa-phone fa-fw" aria-hidden="true"></i>{_menu.Contact}</a>
        </li>
        <li>
          <a href="{link Order:default}" n:class="$presenter->isLinkCurrent('Order:*') ? current"><i class="fa fa-book fa-fw" aria-hidden="true"></i>{_menu.Orders}</a>
        </li>
        <li>
          <a href="{link Permissions:default}" n:class="$presenter->isLinkCurrent('Permissions:*') ? current"><i class="fa fa-user-o fa-fw" aria-hidden="true"></i>{_menu.Users}</a>
        </li>
        <li>
          <a n:href=":Front:Homepage:default" target="_blank"><i class="fa fa-window-maximize fa-fw" aria-hidden="true"></i>{_menu.Site}</a>
        </li>
        <li class="logout-sidebar">
          <a n:href=":Login:Sign:out">{_menu.Logout}</a>
        </li>
      </ul>
    </div>
    <div id="page-content-wrapper">
      <a href="#menu-toggle" class="menuToggle" id="menu-toggle" title="Toggle menu"><i class="fa fa-bars" aria-hidden="true"></i></a>
      <nav class="nav">
        <ul>
          <li class="nav-item logout">
            <div class="dropdown">
              <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fa fa-power-off" aria-hidden="true"></i>
              </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" n:href=":Login:Sign:out"><i class="fa fa-power-off" aria-hidden="true"></i>{_menu.Logout}</a>
              </div>
            </div>
          </li>
        </ul>
      </nav>
      <div class="nav-space"></div>
      {snippet flash}
        {foreach $flashes as $flash}
          <div class="alert alert-{$flash->type}" role="alert">
            <strong>{$flash->message}</strong>
          </div>
        {/foreach}
      {/snippet}
      {include content}
    </div>
  </div>

{block scripts}
  <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
  <script src="{$basePath}/admin-module/js/nette.ajax.js"></script>
  <script src="{$basePath}/admin-module/js/main.js"></script>
{/block}
</body>
</html>